                "metadata": {
                  "operationMetadataId": "dded733b-94b1-40d1-827a-ef29c26158b3"
                }
              }
            }
          },
          "runAfter": {
            "Start_and_wait_for_an_approval": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "7ed53b19-1bbc-4257-af16-690b86e958e9"
          }
        }
      },
      "outputs": {},
