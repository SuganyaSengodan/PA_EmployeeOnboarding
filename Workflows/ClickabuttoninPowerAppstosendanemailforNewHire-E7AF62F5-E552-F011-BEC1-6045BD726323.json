          }
        }
      },
      "actions": {
        "Start_and_wait_for_an_approval": {
          "type": "OpenApiConnectionWebhook",
          "inputs": {
            "parameters": {
              "approvalType": "BasicAwaitAll",
              "WebhookApprovalCreationInput/title": "Approval Request : New Employee Onboarding",
              "WebhookApprovalCreationInput/assignedTo": "Suganya.Sengodan@cognizant.com;",
              "WebhookApprovalCreationInput/details": "New Starter Details:\n\nCandidate Details:@{triggerBody()['text']}\nPosition:@{triggerBody()['text_4']}\nStart Date : @{triggerBody()['text_3']}\nEmployee Email:@{triggerBody()['email']}\n\nPlease review the above details and approve or reject the onboarding request. ",
              "WebhookApprovalCreationInput/enableNotifications": true,
              "WebhookApprovalCreationInput/enableReassignment": true
            },
            "host": {
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_approvals",
              "operationId": "StartAndWaitForAnApproval",
              "connectionName": "shared_approvals"
            }
          },
          "runAfter": {},
          "metadata": {
            "operationMetadataId": "2b52bdb1-b91d-4365-8411-46877a019c14"
          }
        },
        "Condition": {
          "type": "If",
          "expression": {
            "equals": [
              "@outputs('Start_and_wait_for_an_approval')?['body/outcome']",
              "Approve"
            ]
          },
          "actions": {
            "Condition_2": {
              "type": "If",
              "expression": {
                "not": {
